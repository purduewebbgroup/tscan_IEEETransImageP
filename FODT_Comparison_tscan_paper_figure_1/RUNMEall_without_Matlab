echo   - 2nd column: cost function
echo   - 3rd column: estimated value of alpha. 
echo The output filename is specified in the configuration file
echo    as fluohat.dat
echo
echo mv OUTPUT/* OUTPUT/OLD_OUTPUT 
mv OUTPUT/* OUTPUT/OLD_OUTPUT 
echo RUNMEinv
RUNMEinv
